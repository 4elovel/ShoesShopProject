@model List<ShoesShopProject.ViewModels.GoodOrderViewModel>
@{
    ViewData["Title"] = "Замовлення";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int loopCounter = 0;
    decimal total = 0;
}

<div style="position:relative;width:100%;height:90vh">
@foreach (var i in Model)
{
    <div class="Good@(loopCounter)">
        <hr>
        <div style="display: flex; position: relative;">
                  <div class="basket" onclick="deleteGoodFromOrder('@(i.Slug)','Good@(loopCounter)');">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M4.42857 6.5H11.5714V13C11.5714 13.5523 11.1237 14 10.5714 14H5.42857C4.87629 14 4.42857 13.5523 4.42857 13V6.5Z" stroke="#666666" stroke-width="1.5"/>
              <path d="M3 5.25C3 4.69772 3.44772 4.25 4 4.25H12C12.5523 4.25 13 4.69772 13 5.25V5.5C13 6.05228 12.5523 6.5 12 6.5H4C3.44772 6.5 3 6.05228 3 5.5V5.25Z" stroke="#666666" stroke-width="1.5"/>
              <path d="M5.5 3C5.5 2.44772 5.94772 2 6.5 2H9.5C10.0523 2 10.5 2.44772 10.5 3V4.25H5.5V3Z" stroke="#666666" stroke-width="1.5"/>
              </svg>
              <span style="font-size: 14px;">
            Видалити
          </span>
          </div>
                <a style="color:inherit;" @{
                    if (!String.IsNullOrEmpty(i.Slug))
                    {
                            <text>href = "/Shoes/Details/@(i.Slug)"</text>
                    }
                } >
        <div>
          <img width="80px" alt="Shoe Image" src="@i.Photo">
        </div>
        </a>
        <div style="font-size: 16px; color: #969494; margin-left: 20px;">
          <div style="display: none;" value="@(i.Slug)" class="slug">@i.Slug</div>
          <div style="margin-bottom: 3px;">@i.Name</div>
          <div style="margin-bottom: 3px;" class="size" value="@(i.Size)">@i.Size розмір</div>
                    <div style="color: black;margin-bottom: 3px; font-weight: 500;" class="sale-price" value="@i.SalePrice">@i.SalePrice ₴</div>
          <div class="qty">
                        <span class="minus bg-dark" onclick="decreaseCounter('counter@(loopCounter)');">-</span>
                <input class="count counter@(loopCounter)" name="Count" value="@i.Count">
                            <span class="plus bg-dark" onclick="increaseCounter('counter@(loopCounter)');">+</span>
        </div>
        </div>
      </div>
      
    <hr>
        </div>
        loopCounter += 1;
        total += i.Count * (decimal)i.SalePrice;
    }
